{
  "name": "drdplus/adventures-dm",
  "license": "MIT",
  "type": "library",
  "description": "Adventures from DrD+ DM rules",
  "keywords": [
    "Drd plus",
    "rules",
    "adventure"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "drdplus/rules-skeleton": "~1.1"
  },
  "require-dev": {
    "mockery/mockery": "^1.1",
    "phpunit/phpunit": "~7.0",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/RulesSkeleton && cd DrdPlus/Tests && ln -s ../../vendor/drdplus/rules-skeleton/DrdPlus/Tests/RulesSkeleton"
    ]
  }
}
